# basic settings
set hidden true
set icons true
set ignorecase true
set ratios '2:3'
set incsearch
# set drawbox false

# previewer and highlight handled by bat
set preview false
set previewer ~/.config/lf/previewer.sh
map i $~/.config/lf/previewer.sh $f | less -R

# remove default mappings
map m
map o
map n
map "'"
map '"'
map d
map c
map f

# mappings
map . set hidden!
map dd delete
map p paste
map x cut
map y copy
map r rename
map u unselect
map ch chmod
map C clear
map R reload
map <enter> open
map f :fzf_jump

# push mappings
map md push :mkdir<space>
map mf push :touch<space>

# jump directories
map gp cd ~/Pictures
map gd cd ~/Documents
map gD cd ~/Downloads
map ge cd ~/Desktop
map gc cd ~/code
map g. cd ~/dotfiles
map gf cd ~/.config

# frequently edited files
map ov $$EDITOR ~/dotfiles/nvim/init.vim
map oz $$EDITOR ~/dotfiles/.zshrc
map oa $$EDITOR ~/dotfiles/alacritty/alacritty.yml
map of $$EDITOR ~/dotfiles/lf/lfrc

# commands
cmd mkdir %mkdir "$@"
cmd touch %touch "$@"

# open file on designated application else default to $EDITOR
cmd open ${{
  case $(file --mime-type "$fx" -bL) in
    text/*|application/json) $EDITOR "$fx";;
          video/*|image/*|application/pdf) open "$fx";;
         *) $EDITOR "$fx";;
         esac
         }}


# fzf jump to directory
cmd fzf_jump ${{
res="$(fd --type file --follow --hidden --exclude .git --exclude node_modules | fzf)"
if [ -f "$res" ]; then
cmd="select"
elif [ -d "$res" ]; then
cmd="cd"
fi
lf -remote "send $id $cmd \"$res\""
}}
